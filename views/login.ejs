<body>
    <div class="container-md">
        <h1 class="container-sm m-2 p-2">Login</h1>
        <form action="/api/user/login" class="container-sm d-flex flex-column" method="post">
            <input type="text" name="username" id="username" placeholder="Enter your username.." class="m-2 p-2" required>
            <input type="password" name="password" id="password" placeholder="Enter your password.." class="m-2 p-2" required>
